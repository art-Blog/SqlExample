
<input type="hidden" id="data" data-model="@ViewBag.Data" data-helper="@ViewBag.HelperName" data-condition="@ViewBag.Condition" data-sql="@ViewBag.SqlCmd" />

<input type="hidden" id="vm" data-vm="@ViewBag.Vm"/>

<div id="app">
    <comp-page-title :helper="vm.HelperName" :sqlcmd="vm.SqlCmd"></comp-page-title>
    <comp-page-form :condition="condition"></comp-page-form>
    <comp-page-list :model="model"></comp-page-list>
</div>

@section scripts{
    <script src='https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.17/vue.js'></script>
    <script src="~/js/Sample/app.js" type="module"></script>
}